{
    "manifest_version": 2,
    "name": "__MSG_lor_notifier__",
    "version": "0.2.1",
    "author": "Virtuos86",

    "default_locale": "ru",
    "description": "__MSG_description__",
    "icons": {
        "48": "extension/icon.png",
        "64": "extension/icon64.png"
    },

    "options_ui": {
        "browser_style": true,
        "page": "extension/options.html"
    },

    "background": {
        "scripts": ["extension/lib/button/status.js", "extension/lib/main.js"]
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "18": "extension/data/iconWarning.png",
            "32": "extension/data/iconWarning-menuPanel.png",
            "36": "extension/data/iconWarning@2x.png",
            "64": "extension/data/iconWarning-menuPanel@2x.png"
        },
        "default_title": "__MSG_lor_notifier__"
    },

    "permissions": [
        "https://www.linux.org.ru/",
        "storage",
        "tabs"
    ]
}
